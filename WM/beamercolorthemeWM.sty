%%
%% Beamer color theme following the W&M Style Guide as of March 2015
%% found at http://styleguide.wm.edu/ (may need W&M username/password to
%% access).
%%
%% Author: Juan Carlos Cornejo <jccornejo@email.wm.edu>
%% http://wmpeople.wm.edu/site/page/jccornejo/

%% Define the preamble
\mode<presentation>

%% Require some packages
\usepackage{color}

%% Define W&M standard colors
%% Retrieved 2015/02/22 http://styleguide.wm.edu/university-colors
\definecolor{WMGreen}       {RGB}{ 17,  87,  64}
\definecolor{WMGold}        {RGB}{185, 151,  91}
\definecolor{WMSpiritGold}  {RGB}{240, 179,  35}
\definecolor{WMSilver}      {RGB}{208, 211, 212}
\definecolor{WMWhite}       {RGB}{255, 255, 255}
\definecolor{WMBlack}       {RGB}{  0,   0,   0}

%% Now configure the colors
\setbeamercolor*{title page header}{fg=WMWhite}
\setbeamercolor*{title}{fg=WMWhite}
\setbeamercolor*{subtitle}{fg=WMWhite}
\setbeamercolor*{institute}{fg=WMWhite}
\setbeamercolor*{author}{fg=WMWhite}
\setbeamercolor*{date}{fg=WMWhite}
\setbeamercolor*{frametitle}{fg=WMGold}
\setbeamercolor*{title in head/foot}{fg=WMGreen}
\setbeamercolor*{page number in head/foot}{fg=WMWhite}
\setbeamercolor*{date in head/foot}{fg=WMGreen}
\setbeamercolor*{part number}{fg=WMSilver}
\setbeamercolor*{structure}{fg=WMGreen}
\setbeamercolor*{alerted text}{fg=WMSpiritGold}

%% Block colors
\setbeamercolor{block title}{fg=WMWhite, bg=WMGold}
\setbeamercolor{block body}{fg=WMWhite, bg=WMGreen}
\setbeamercolor{item}{fg=WMSilver}
\setbeamercolor{quote}{fg=WMGreen}
\mode
<all>
